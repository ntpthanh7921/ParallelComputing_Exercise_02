{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "description": "Base settings using Ninja generator",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "debug",
      "description": "Standard Debug build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_ASAN": "OFF",
        "ENABLE_UBSAN": "OFF",
        "ENABLE_TSAN": "OFF"
      }
    },
    {
      "name": "release",
      "description": "Standard Release build (with LTO if applicable)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_ASAN": "OFF",
        "ENABLE_UBSAN": "OFF",
        "ENABLE_TSAN": "OFF"
      }
    },
    {
      "name": "debug-asan",
      "description": "Debug build with AddressSanitizer and UndefinedBehaviorSanitizer",
      "inherits": "debug",
      "cacheVariables": {
        "ENABLE_ASAN": "ON",
        "ENABLE_UBSAN": "ON",
        "ENABLE_TSAN": "OFF"
      }
    },
    {
      "name": "debug-tsan",
      "description": "Debug build with ThreadSanitizer",
      "inherits": "debug",
      "cacheVariables": {
        "ENABLE_ASAN": "OFF",
        "ENABLE_UBSAN": "ON",
        "ENABLE_TSAN": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "debug-asan",
      "configurePreset": "debug-asan"
    },
    {
      "name": "debug-tsan",
      "configurePreset": "debug-tsan"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "release",
      "configurePreset": "release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug-asan",
      "configurePreset": "debug-asan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug-tsan",
      "configurePreset": "debug-tsan",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
